<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.skk.mathcard.activity.FinalScoreActivity" >

    <TextView
        android:id="@+id/fs_TextView_GameOver"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/gameovernew1png"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    

    <TextView
        android:id="@+id/fs_TextView_New_HighScore"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fs_TextView_GameOver"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold" 
        android:background="@drawable/highscore400"/>

    <RatingBar
        android:id="@+id/fs_ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fs_TextView_New_HighScore"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:isIndicator="true"
        android:numStars="5"
        android:paddingTop="20dip"
        android:stepSize="0.5"
        android:visibility="invisible" />

   

    <TextView
        android:id="@+id/fs_TextView_Scores"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fs_ratingBar"
        android:textSize="15sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="10dip" />

    
    <Button
        android:id="@+id/fs_Button_scoreBoard"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
        android:layout_below="@id/fs_TextView_Scores"
        android:layout_marginRight="20dp"
        android:background="@drawable/scoreboard100" />
 <Button
        android:id="@+id/fs_Button_newGame"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view1"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/fs_TextView_Scores"
         android:layout_marginLeft="20dp"
        android:background="@drawable/restart100"
        android:paddingTop="20dip" />
   

   

</RelativeLayout>