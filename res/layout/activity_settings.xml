<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.skk.mathcard.activity.SettingsActivity" >

    <TextView
        android:id="@+id/textViewSoundSetting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@android:color/holo_blue_light"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Sound Setting" />

    <Switch
        android:id="@+id/switchSound"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/textViewSoundSetting"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:text="Sound" />
    <TextView
        android:id="@+id/textViewGameSetting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
         android:layout_below="@id/switchSound"
         android:textSize="20sp"
        android:textStyle="bold"
        android:background="@android:color/holo_blue_light"
        android:layout_marginTop="10dp"
        android:text="Game Setting" />
    

    <TextView
        android:id="@+id/textViewNoGames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewGameSetting"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:layout_alignParentLeft="true"
        android:text="Cards per game" />
    <Spinner
        android:id="@+id/spinnerNoGames"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewGameSetting"
        android:layout_alignParentRight="true"
        
        android:layout_marginTop="10dp" />

</RelativeLayout>